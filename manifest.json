{
  "manifest_version": 3,
  "name": "PokeTab",
  "short_name": "PokeTab",
  "description": "A fun Pokedex Chrome Extension showing Pok√©mon, weather, time, and motivational quotes!",
  "version": "1.0.0",

  "icons": {
    "16": "favicon_io/icons/favicon-16.png",
    "32": "favicon_io/icons/favicon-32.png",
    "48": "favicon_io/icons/favicon-48.png",
    "128": "favicon_io/icons/favicon-128.png"
  },

  "action": {
    "default_popup": "allPokemons.html",
    "default_icon": {
      "16": "favicon_io/icons/favicon-16.png",
      "48": "favicon_io/icons/favicon-48.png",
      "128": "favicon_io/icons/favicon-128.png"
    }
  },

  "background": {
    "service_worker": "allPokemons.js"
  },

  "permissions": [
    "storage",
    "geolocation",
    "activeTab"
  ],

  "host_permissions": [
    "https://pokeapi.co/*",
    "https://api.openweathermap.org/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
