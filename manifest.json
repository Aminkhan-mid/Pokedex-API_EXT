{
  "manifest_version": 3,
  "name": "PokeTab",
  "short_name": "PokeTab",
  "description": "A fun Pokedex Chrome Extension and Web App showing Pok√©mon, weather, time, and motivational quotes!",
  "version": "1.0.0",

  "icons": {
    "16": "icons/favicon-16.png",
    "32": "icons/favicon-32.png",
    "48": "icons/favicon-48.png",
    "128": "icons/favicon-128.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16.png",
      "48": "icons/favicon-48.png",
      "128": "icons/favicon-128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "geolocation",
    "activeTab"
  ],

  "host_permissions": [
    "https://pokeapi.co/*",
    "https://api.openweathermap.org/*"
  ],

  "theme_color": "#C7F3A9",          
  "background_color": "#E6FFE6",     
  "display": "standalone",           

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
